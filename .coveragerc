# .coveragerc file for pytest-cov (i.e. coverage) (see https://coverage.readthedocs.io/en/latest/config.html)
# runs in Github Actions .github/workflows/ci-cd.yaml

[coverage:run]
branch = True
source = webchanges
omit =
    .tox/*
    docs/*
    tests/*
    setup.py
    webchanges.py
relative_files = True
command_line = -m pytest -v
plugins =
    coverage_conditional_plugin

[coverage:report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug:

    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:
# ignore_errors = True

[coverage:coverage_conditional_plugin]
# Here we specify our pragma rules:
rules =
    "is_installed('bs4')": has-bs4
    "is_installed('jq')": has-jq
    "is_installed('pdftotext')": has-pdftotext
    "is_installed('pytesseract')": has-pytesseract
